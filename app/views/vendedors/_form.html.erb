<%= form_with(model: vendedor) do |form| %>
  <% if vendedor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vendedor.errors.count, "error") %> prohibited this vendedor from being saved:</h2>

      <ul>
        <% vendedor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
